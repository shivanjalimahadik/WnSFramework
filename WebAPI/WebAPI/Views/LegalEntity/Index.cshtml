@model WebAPI.ViewModels.LegalEntityViewmodel
@{
    ViewBag.Title = "Index";
}

<h3>Legal Entity</h3>

<div style="align-content:center">
    @using (Html.BeginForm("Save", "LegalEntity", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.LegalEntityName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LegalEntityName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LegalEntityName, null, new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<br />

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <td>Legal Entity Names</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    @for (int i = 0; i < Model.LegalEntityList.Count(); i++)
    {
        <tr>
            <td>
                @Model.LegalEntityList[i].LegalEntityName
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "LegalEntity", new { id = Model.LegalEntityList[i].Id }, null)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "LegalEntity", new { id = Model.LegalEntityList[i].Id }, null)
            </td>
        </tr>
    }
</table>
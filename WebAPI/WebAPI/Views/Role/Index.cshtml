@model WebAPI.ViewModels.RolesViewModel
@{
    ViewBag.Title = "Index";
}

<h3>Roles</h3>

@Html.ActionLink("Add New","New","Role")
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <td>
                Role Names
            </td>
            <td>Edit</td>            
            <td>Delete</td>
        </tr>
    </thead>
    @for(int i=0;i< Model.rolesList.Count(); i++)
    {
        <tr>
            <td>
                @Model.rolesList[i].RoleName
            </td>
            <td>
                @Html.ActionLink("Edit","Edit","Role", new { id = Model.rolesList[i].Id}, null)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Role", new { id = Model.rolesList[i].Id}, null)
            </td>
        </tr>
        
    }
</table>

